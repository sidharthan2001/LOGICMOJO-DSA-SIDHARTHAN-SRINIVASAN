3) Delete in a Singly Linked List:

/*
class Node
{
    int data;
    Node next;

    Node(int d)
    {
        this.data = d;
        this.next = null;
    }
}
*/
class Solution {
    Node deleteNode(Node head, int x) {
        // code here
        int count= 1;
        
        if(x == 1) return head.next;
        
        Node curr = head;
        Node prev = null;
        
        while(curr != null && count != x){
           
            prev = curr;
            curr = curr.next;
            count = count + 1;
        }
        
        prev.next = curr.next;
        
        return head;
    }
}


